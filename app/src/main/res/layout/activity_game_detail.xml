<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameDetailActivity"
    android:background="#000000"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical"
        android:background="#181818"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivbackbtngamedet"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowleftwhite"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lokapalagames"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cvNews"
                app:cardCornerRadius="5dp"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/black"
                >
                    <LinearLayout
                        android:paddingLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ivNewsGame"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/newspapericon"
                            />
                        <TextView
                            android:layout_marginRight="21dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="News"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="2.01dp"
                            />
                </LinearLayout>
                
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_centerInParent="true"
                android:id="@+id/cvEvent"
                app:cardCornerRadius="5dp"
                android:background="@android:color/black"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/black"
                >
                <LinearLayout
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivEventGame"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/eventicon"
                        />
                    <TextView
                        android:layout_marginRight="21dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2.01dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvTour"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="5dp"
                android:background="@android:color/black"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/black"
                >
                <LinearLayout
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivTourGame"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/smalltophy"
                        />
                    <TextView
                        android:maxLines="1"
                        android:layout_marginRight="21dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tournament"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2.01dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frnews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>