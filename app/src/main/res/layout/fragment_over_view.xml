<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OverViewFragment"
    android:background="#181818"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:src="@drawable/tour1"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/ivSmrtTour"
                android:layout_marginLeft="11dp"
                android:layout_alignParentLeft="true"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/smartfren"
                />
            <TextView
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/ivSmrtTour"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="SmartFriend Company"
                />
            <Button
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="121dp"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:text="CONTACT"
                android:background="@drawable/btnborderwhite"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="11dp"
            />
        <TextView
            android:paddingLeft="11dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="DESCRIPTIONS ABOUT THIS TOURNAMENT"
            />
        <TextView
            android:id="@+id/tvTourDesc"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:text="Risen Esports is happy to present the first running of our brand new I2P tournament. This will run on a weekly basis, every Monday night @ 6PM AEST! Here you'll be able to fight for both bragging rights and prizes! Who doesn't enjoy both of those things combined am I right? Keen to come and hang out with us all on Discord? Then click here to join our community! Action from throughout the night will be streamed live to our twitch channel at twitch.tv/realrisen. TOURNAMENT OUTLINE: Date: April 20th - 6PM AEST Format: Single Elimination Registration Closes: April 20th 2020 - 5PM AEST Check In: April 20th 2020 - 5PM - 6PM AEST Tournament Start: 6PM AEST Account Eligibility: Minimum level 30. Individuals need to have a solo/duo rank between Iron IV to Platinum I and a minimum of 25 Ranked games played to be able to compete in our Iron to Platinum Mondays. Full rules and guidelines for our I2P tournament will be included in our Discord server. ALL PLAYERS MUST BE APART OF OUR DISCORD SERVER"
            />
        <LinearLayout
            android:layout_marginHorizontal="11dp"
            android:background="@drawable/bordertop"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            >
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvDetails"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:text="DETAILS"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvRules"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:text="RULES"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvPrize"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:text="PRIZES"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvSchedule"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:text="SCHEDULE"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvContact"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:text="CONTACT"
                    />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_marginHorizontal="11dp"
            android:background="@drawable/borderbot"
            android:id="@+id/FRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</ScrollView>