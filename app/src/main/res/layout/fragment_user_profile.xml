<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserProfileFragment"
    android:background="#373636"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_person_black_24dp"
            />
        <TextView
            android:id="@+id/tvnameprofile"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="29sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginLeft="19dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="8dp"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivredbell"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/redbell"
            />
        <TextView
            android:layout_toRightOf="@id/ivredbell"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrowrightbold"
            android:layout_marginRight="9.88dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginTop="22.9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <RelativeLayout
        android:paddingLeft="8dp"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivgreenperson"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greenperson"
            />
        <TextView
            android:layout_toRightOf="@id/ivgreenperson"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrowrightbold"
            android:layout_marginRight="9.88dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginTop="22.9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <RelativeLayout
        android:paddingLeft="8dp"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivblacksetting"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blacksetting"
            />
        <TextView
            android:layout_toRightOf="@id/ivblacksetting"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrowrightbold"
            android:layout_marginRight="9.88dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginTop="22.9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <RelativeLayout
        android:paddingLeft="8dp"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivblueteam"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blueteam"
            />
        <TextView
            android:layout_toRightOf="@id/ivblueteam"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage My Teams"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrowrightbold"
            android:layout_marginRight="9.88dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginTop="22.9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:paddingRight="5dp"
        android:drawableRight="@drawable/questionmark"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="Do You Have Any Questions"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@android:color/black"
        android:gravity="center_vertical|center"
        />

</LinearLayout>