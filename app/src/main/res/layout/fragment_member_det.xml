<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MemberFragmentDet"
    android:background="#373636"
    android:paddingBottom="45dp"
    >
    <LinearLayout
        android:paddingRight="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:background="@drawable/btnroundedblackbg"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="Owner"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/white"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                />
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginLeft="9dp"
                    android:layout_width="84dp"
                    android:layout_height="143dp"
                    android:src="@drawable/lmback"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama : Lemon"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Umur : 20"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status : CEO, Pendiri Cloud9"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Favorit : aa, bb"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:text="Contact"
                        android:textColor="@android:color/white"
                        />
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/facebooklogo"
                            />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gmaillogo"
                            />
                        <ImageView
                            android:layout_marginLeft="23dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gmaillogo"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:src="@drawable/whiteline"
                />
            <TextView
                android:layout_marginLeft="23dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                />
            <ImageView
                android:layout_marginLeft="23dp"
                android:layout_gravity="center_vertical"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:src="@drawable/whiteline"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="32dp"
            android:id="@+id/rvmemberdet"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>