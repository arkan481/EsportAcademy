<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crysisbackground"
    >
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blacktranselev"
        android:elevation="1dp"
        />
    <ImageView
        android:id="@+id/IVbacksignupid"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowleftwhite"
        android:layout_marginLeft="11.48dp"
        android:layout_marginTop="23.32dp"
        android:elevation="2dp"
        />
    <ImageView
        android:id="@+id/IVlogologid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/IVbacksignupid"
        android:layout_marginTop="25.69dp"
        android:src="@drawable/logotext"
        android:elevation="2dp"
        />
    <EditText
        android:id="@+id/etusernamelogid"
        android:paddingRight="20dp"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/IVlogologid"
        android:layout_marginTop="53.45dp"
        android:textColor="@android:color/white"
        android:elevation="2dp"
        android:hint="Username"
        android:textColorHint="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/personwhite"
        android:drawableBottom="@drawable/whiteline"
        />
    <EditText
        android:id="@+id/etpasswordlogid"
        android:paddingRight="20dp"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etusernamelogid"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:elevation="2dp"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/eyewhite"
        android:drawableBottom="@drawable/whiteline"
        />
    <EditText
        android:id="@+id/etconfpasswordlogid"
        android:paddingRight="20dp"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etpasswordlogid"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:elevation="2dp"
        android:hint="Confirm Password"
        android:textColorHint="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/eyewhite"
        android:drawableBottom="@drawable/whiteline"
        />
    <CheckBox
        android:id="@+id/checkboxsignupid"
        android:buttonTint="@android:color/white"
        android:layout_marginLeft="55dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etconfpasswordlogid"
        android:text="Agree to terms and conditions"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        />
    <RelativeLayout
        android:id="@+id/RLloginlogid"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttongradgreenvp3"
        android:layout_marginTop="63dp"
        android:layout_below="@id/checkboxsignupid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="2dp"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/redbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gmaillogo"
            android:scaleType="centerInside"
            />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bluebox"
            android:src="@drawable/facebooklogo"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/RLloginlogid"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Already a Member? "
            android:textStyle="bold"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/tvloginid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FF4C"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="10sp"
            />
    </LinearLayout>

</RelativeLayout>