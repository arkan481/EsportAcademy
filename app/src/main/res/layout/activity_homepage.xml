<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomepageActivity">
    <FrameLayout
        android:id="@+id/FRhomeid"
        android:layout_above="@id/LRbotappbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373636"
        />
    <LinearLayout
        android:id="@+id/LRbotappbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="#000000"
        >
        <RelativeLayout
            android:id="@+id/rlhomeicon"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_white_24dp"
                />
            <ImageView
                android:id="@+id/ivlamp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abstracttrans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlbookmarkicon"
            android:layout_gravity="center"
            android:layout_marginLeft="66.09dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="29.67dp"
                android:layout_height="25.27dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_bookmark_border_grey_24dp"
                />
            <ImageView
                android:id="@+id/ivlamp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abstracttrans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rltrophyicon"
            android:layout_gravity="center"
            android:layout_marginLeft="66.09dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="29.67dp"
                android:layout_height="25.27dp"
                android:layout_centerInParent="true"
                android:src="@drawable/trophyicon"
                />
            <ImageView
                android:id="@+id/ivlamp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abstracttrans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlprofileicon"
            android:layout_gravity="center"
            android:layout_marginLeft="50.09dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="29.67dp"
                android:layout_height="25.27dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_account_circle_grey_24dp"
                />
            <ImageView
                android:id="@+id/ivlamp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abstracttrans"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>