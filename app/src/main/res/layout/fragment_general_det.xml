<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.GeneralDetFragment"
    android:background="#373636">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingRight="11dp"
            android:paddingLeft="11dp"
            android:paddingTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="Description"
                />
            <TextView
                android:paddingBottom="20dp"
                android:background="@drawable/etwithborderwhite"
                android:id="@+id/tvDescDet"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="Cloud9 (C9) adalah sebuah organisasi eSports yang bermarkas di Amerika. Disponsori oleh HTC dan sebelumnya dikenal sebagai Cloud9 G2A, Cloud9 mempunyai tim yang bermain untuk League of Legends, Call of Duty: Black Ops III, Counter-Strike: Global Offensive, Heartstone: Heroes of Warcraft, Super Smash Bros. Melee, Overwatch, Smite. Cloud9 dulunya mempunyai tim untuk Dota 2"
                />
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="Games Division"
                />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/LRgamesdet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
            <View
                android:layout_marginTop="38.5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="28.5dp"
                android:layout_marginLeft="28.5dp"
                android:background="@android:color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Recruitment"
                android:layout_marginTop="21.5dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="463dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="26dp"
                android:layout_gravity="center"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@android:color/black"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/ivrtsdet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>